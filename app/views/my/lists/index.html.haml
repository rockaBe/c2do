%h1 Listing lists

%table
  %tr
    %th Name
    %th Position
    %th
    %th
    %th

  - @lists.each do |list|
    %tr
      %td.icon-progress-2= list.name
      %td= list.position
      %td= link_to 'show', my_list_path(list), class: 'icon-info-circled'
      %td= link_to 'edit', edit_my_list_path(list), class: 'icon-edit-circled'
      %td= link_to 'delete', my_list_path(list), :method => :delete, :data => { :confirm => t('confirmations.deletion', model: t('model.list'), name: list.name) }, class: 'icon-delete-circled'

%br

= link_to 'New List', new_my_list_path

