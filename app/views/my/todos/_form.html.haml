- if @todo.new_record?

  = simple_form_for([:my, @list, @todo]) do |f|
    = f.error_notification

    .form-inputs
      = f.input :name
      = f.input :due_at, as: :string, input_html: {data: {"date-startdate" => 3.days.ago }}

    .form-actions
      = f.button :submit

- else

  = simple_form_for([:my, @todo]) do |f|
    = f.error_notification

    .form-inputs
      = f.input :name
      = f.input :due_at, as: :string, input_html: {data: {"date-startdate" => 3.days.ago }}

    .form-actions
      = f.button :submit
